<h1>Artikel</h1>

<table>
  <thead>
    <tr>
      <th>Artikelnumber</th>
      <th>Artikelname</th>
      <th>Artikeltyp</th>
      <th>Artikelbeschreibung</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.number %></td>
        <td><%= part.name %></td>
        <td><%= part.typ %></td>
        <td><%= part.description %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Artikel anlegen', new_part_path %>
